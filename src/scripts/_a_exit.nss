/*

    Global area exit event for all areas.

*/
//::////////////////////////////////////////////////////////////////////////////
//:: Created:   Galefer (03/12/24)
//::////////////////////////////////////////////////////////////////////////////

// INCLUDES  -------------------------------------------------------------------

#include "_i_generic"

// EXECUTION  ------------------------------------------------------------------

void main()
{
    object oArea = GetArea(OBJECT_SELF);
    object oExit = GetExitingObject();

    if (GetIsAreaInstanced(oArea) == TRUE)
    {
        if (GetIsPC(oExit) == TRUE)
            DestroyArea(oArea);
    }
}
